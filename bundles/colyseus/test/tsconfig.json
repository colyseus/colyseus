{
    "compilerOptions": {
        "outDir": "lib",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "noImplicitAny": false,
        "sourceMap": false,
        "skipLibCheck": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "erasableSyntaxOnly": true,
    },
    "include": [
      "**/*.ts",
      "./../src/**/*.ts"
    ]
}
