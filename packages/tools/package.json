{
  "name": "@colyseus/tools",
  "version": "0.17.17",
  "type": "module",
  "description": "Simplify the development and production settings for your Colyseus project.",
  "input": "./src/index.ts",
  "main": "./build/index.cjs",
  "module": "./src/index.ts",
  "typings": "./build/index.d.ts",
  "exports": {
    ".": {
      "@source": "./src/index.ts",
      "types": "./build/index.d.ts",
      "import": "./build/index.mjs",
      "require": "./build/index.cjs"
    },
    "./*": {
      "@source": "./src/*.ts",
      "types": "./build/*.d.ts",
      "import": "./build/*.mjs",
      "require": "./build/*.cjs"
    }
  },
  "scripts": {
    "start": "tsx example/app.ts",
    "test": "mocha --require tsx test/pm2-deployment.test.ts"
  },
  "bin": {
    "colyseus-system-boot": "system-boot.cjs",
    "colyseus-post-deploy": "post-deploy.cjs",
    "colyseus-report-stats": "report-stats.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/colyseus/colyseus.git"
  },
  "keywords": [
    "colyseus",
    "tools",
    "multiplayer"
  ],
  "author": "Endel Dreyer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/colyseus/colyseus/issues"
  },
  "files": [
    "build",
    "src",
    "pm2",
    "html"
  ],
  "homepage": "https://colyseus.io",
  "dependencies": {
    "@pm2/io": "^6.0.1",
    "dotenv": ">=14.1.0"
  },
  "devDependencies": {
    "@colyseus/bun-websockets": "workspace:^",
    "@colyseus/core": "workspace:^",
    "@colyseus/redis-driver": "workspace:^",
    "@colyseus/redis-presence": "workspace:^",
    "@colyseus/uwebsockets-transport": "workspace:^",
    "@colyseus/ws-transport": "workspace:^",
    "@types/dotenv": "^8.2.0",
    "pm2": "^6.0.14",
    "mocha": "^11.7.5",
    "uwebsockets-express": "^2.0.1"
  },
  "peerDependencies": {
    "@colyseus/core": "0.17.x",
    "@colyseus/ws-transport": "0.17.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "apps": [
    {
      "merge_logs": true,
      "max_memory_restart": "256M",
      "script": "./pm2/post-deploy-agent.cjs",
      "instance_var": "INSTANCE_ID"
    }
  ]
}
