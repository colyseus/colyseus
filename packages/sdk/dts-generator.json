{
    "compilationOptions": {
        "preferredConfigPath": "./tsconfig.json"
    },

    "entries": [
        {
            "filePath": "./src/index.ts",
            "outFile": "./dist/colyseus.d.ts",

            "failOnClass": false,
            "noCheck": true,

            "libraries": {
                "inlinedLibraries": [
                    "node:async_hooks",
                    "events",
                    "@colyseus/msgpackr",
                    "@colyseus/schema",
                    "@colyseus/better-call",
                    "@colyseus/timer",
                    "@colyseus/clock",
                    "@standard-schema/spec"
                ]
            },

            "output": {
                "inlineDeclareGlobals": false,
                "sortNodes": false,
                "exportReferencedTypes": false,

                "umdModuleName": "Colyseus",
                "inlineDeclareExternals": false,
                "noBanner": false,
                "respectPreserveConstEnum": false
            }
        }
    ]
}
